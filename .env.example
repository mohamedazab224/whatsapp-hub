# WhatsApp Hub - Environment Variables Template
# ============================================
# Copy these to v0 Vars sidebar or create .env.local file

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# WhatsApp Configuration (Required)
WHATSAPP_ACCESS_TOKEN=your_meta_access_token
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_API_VERSION=v24.0

# Webhook Configuration (Required)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=custom_verify_token
VERIFY_TOKEN=custom_verify_token

# Logging (Optional)
LOG_LEVEL=info

# Rate Limiting (Optional)
WEBHOOK_RATE_LIMIT_MAX=120
WEBHOOK_RATE_LIMIT_WINDOW_SEC=60
QUEUE_SECRET=your_queue_secret
QUEUE_RATE_LIMIT_MAX=30
QUEUE_RATE_LIMIT_WINDOW_SEC=60

# App Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
